#include <stdio.h>

int main(void)
{
    int k,n,s;
    int sum = 0, avg = 0;
    printf("국어 점수를 입력하시오. (0 제외) : ");
    scanf("%d",&k);
    
    printf("영어 점수를 입력하시오. (0 제외) : ");
    scanf("%d",&n);
    
    printf("수학 점수를 입력하시오. (0 제외) : ");
    scanf("%d",&s);
    
    sum = k + n + s;
    avg = sum / 3;
    
    printf("세 과목의 합 : %d\n",sum);
    printf("세 과목의 평균 : %d\n",avg);
    
    return 0;
}
