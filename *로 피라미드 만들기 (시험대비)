#include <stdio.h>

int main(void)
{
    int n;
    scanf("%d",&n);
    for(int i = 0; i < n/2 + 1; i++)
    {
        for(int j = 0; j < n/2 - i; j++)
        {
            printf(" ");
        }
        for(int k = 0; k < i * 2 + 1; k++)
        {
            printf("*");
        }
        printf("\n");
    }
    return 0;
}
