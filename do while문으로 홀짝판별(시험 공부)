#include <stdio.h>

int main(void)
{
    int a;
    do
    {
        printf("자연수를 입력하세요(종료는 0) : ");
        scanf("%d",&a);
        if (a % 2 == 0) {
            printf("%d 는 짝수!\n",a);
        }
        if(a % 2 == 1)
        {
            printf("%d 는 홀수!\n",a);
        }
        if(a == 0)
        {
            printf("종료합니다!");
            break;
        }
    }while(a != 0);
    return 0;
}
